{
  "name": "wizard-zone",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run build:shared && concurrently \"npm run watch:shared\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "watch:shared": "npm run watch --workspace=@wizard-zone/shared",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=@wizard-zone/shared",
    "test": "npm run test --workspaces --if-present",
    "test:client": "npm run test --workspace=client",
    "test:server": "npm run test --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
